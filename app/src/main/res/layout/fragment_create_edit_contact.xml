<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.CreateEditContactFragment">
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_save"
        android:text="Save"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/et_first_name"/>
    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/et_first_name"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:hint="First Name"
        app:layout_constraintTop_toBottomOf="@id/btn_save"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/et_last_name"/>
    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/et_last_name"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:hint="Last Name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_first_name"
        app:layout_constraintBottom_toTopOf="@id/et_phone_numbers"/>
    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/et_phone_numbers"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:hint="Phone Numbers"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_last_name"
        app:layout_constraintBottom_toTopOf="@id/et_emails"/>
    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/et_emails"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:hint="Emails"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_phone_numbers"
        app:layout_constraintBottom_toTopOf="@id/et_street_address"
        />
    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/et_street_address"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:hint="Street Address"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_emails"
        app:layout_constraintBottom_toTopOf="@id/et_city"/>
    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/et_city"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:hint="City"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_street_address"
        app:layout_constraintBottom_toTopOf="@id/et_state"/>
    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/et_state"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:hint="State"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_city"
        app:layout_constraintBottom_toTopOf="@id/et_zipcode"/>
    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/et_zipcode"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:hint="Zipcode"
        android:inputType="number"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_state"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>