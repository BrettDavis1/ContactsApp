<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.DetailContactFragment">
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_edit"
        android:text="Edit Contact"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/tv_first_name"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_first_name"
        android:layout_width="0dp"
        android:layout_height="0dp"
        tools:text="First Name"
        app:layout_constraintBottom_toTopOf="@id/tv_last_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_edit" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_last_name"
        android:layout_width="0dp"
        android:layout_height="0dp"
        tools:text="Last Name"
        app:layout_constraintBottom_toTopOf="@id/tv_phone_numbers"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_first_name" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_phone_numbers"
        android:layout_width="0dp"
        android:layout_height="0dp"
        tools:text="Phone Numbers"
        app:layout_constraintBottom_toTopOf="@id/tv_emails"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_last_name" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_emails"
        android:layout_width="0dp"
        android:layout_height="0dp"
        tools:text="Emails"
        app:layout_constraintBottom_toTopOf="@id/tv_street_address"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_phone_numbers" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_street_address"
        android:layout_width="0dp"
        android:layout_height="0dp"
        tools:text="Street Address"
        app:layout_constraintBottom_toTopOf="@id/tv_city"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_emails" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_city"
        android:layout_width="0dp"
        android:layout_height="0dp"
        tools:text="City"
        app:layout_constraintBottom_toTopOf="@id/tv_state"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_street_address" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_state"
        android:layout_width="0dp"
        android:layout_height="0dp"
        tools:text="State"
        app:layout_constraintBottom_toTopOf="@id/tv_zipcode"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_city" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_zipcode"
        android:layout_width="0dp"
        android:layout_height="0dp"
        tools:text="Zipcode"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_state" />

</androidx.constraintlayout.widget.ConstraintLayout>